{
  "name": "typescript-api-skeleton",
  "version": "3.0.0",
  "type": "module",
  "description": "A simple TypeScript skeleton for easy tasks. For anything more complex, a DDD structure is recommended.",
  "main": "src/server.ts",
  "scripts": {
    "start": "node ./dist/src/server.js",
    "dev": "ts-node-dev --rs --transpile-only ./src/server.ts",
    "dev:debug": "ts-node-dev --inspect --rs --transpile-only ./src/server.ts",
    "build": "tsc -p tsconfig.build.json",
    "build:prod": "tsc -p tsconfig.build.prod.json",
    "lint": "eslint --ignore-path .gitignore . --ext .ts --no-error-on-unmatched-pattern",
    "lint:fix": "npm run lint -- --fix",
    "prettier": "npx prettier src test --check --no-error-on-unmatched-pattern",
    "prettier:fix": "npm run prettier -- --write",
    "format": "npm run prettier:fix && npm run lint:fix",
    "test": "jest --verbose --detectOpenHandles"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BoscoDomingo/typescript-api-skeleton.git"
  },
  "keywords": [
    "api",
    "skeleton",
    "typescript"
  ],
  "author": "Bosco Domingo",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/BoscoDomingo/typescript-api-skeleton/issues"
  },
  "homepage": "https://github.com/BoscoDomingo/typescript-api-skeleton#readme",
  "dependencies": {
    "dotenv": "^16.0.3",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.11",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "prettier": "2.8.7",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.3"
  }
}
